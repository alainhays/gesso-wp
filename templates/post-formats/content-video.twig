<article class="{{ post.class }} post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
  <h2 class="post-title">{{ post.title }}</h2>
  <div class="author">{{ __('Authored by', 'gesso') }}
    <a href="{{ post.author.link }}">{{ post.author.display_name }}</a>
  </div>
  
  {% set video = function( 'get_media_embedded_in_content', post.content, ['video', 'object', 'embed', 'iframe'] ) %}

  {% if '' != video %}

    {% for video_html in video %}
      <div class="entry-video">
        {{ video_html }}
      </div>        
    {% endfor %}

  {% endif %}

</article>
{{ comment_form }}