{% extends "base.twig" %}

{% block content %}

    <!-- START: template provided by views/search.twig  -->
    <section class="section section--search-results">
        <h1 class="section__title">{{ __('Search results for term: ', 'gesso') }}
            {{ request.get.s }}</h1>

        <div class="section__result-loop">
            {% for post in posts %}
                <div class="section__result">
                    <a href="{{ post.link }}">{{post.title}}</a>
                </div>
            {% endfor %}
        </div>

        {% include 'templates/pagination.twig' %}
    </section>
    <!-- END: template provided by views/search.twig  -->

{% endblock %}
