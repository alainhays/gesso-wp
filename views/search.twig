{% extends "base.twig" %}

{% block content %}

  <!-- Provided by search.twig -->
  <h1>Search results for term: {{ request.get.s }}</h1>
  <section class="section section__search-results">
    {% for post in posts %}
      <div class="result">
        <a href="{{ post.link }}">{{post.title}}</a>
      </div>
    {% endfor %}
  </section>


  {% include 'templates/pager.twig' %}

{% endblock %}
