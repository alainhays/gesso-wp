{% extends "base.twig" %}

{% block content %}
    <!-- START: template provided by views/category.twig  -->
    <section class="section section--category-archive">
        <h2 class="section__title">{{__('Category Archive: ', 'gesso') }}{{ archive_title }}</h2>
        <h4 class="section__description">{{ archive_description }}</h4>

        <div class="section__article-loop">
            {% for post in posts %}
                <article class="article article--{{ post.type }} {{ post.class }}">
                    <h3 class="article__title">
                        <a href="{{ post.link }}">{{ post.post_title }}</a>
                    </h3>
                    <p class="article__excerpt">{{ post.post_excerpt }}</p>
                </article>
            {% endfor %}
        </div>

        {% include 'templates/pagination.twig' %}
    </section>
    <!-- END: template provided by views/category.twig  -->
{% endblock %}
