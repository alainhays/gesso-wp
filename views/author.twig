{% extends "base.twig" %}

{% block content %}

    <!-- START: template provided by views/author.twig  -->
    <section class="section section--author">
        {% if posts %}

            <h1 class="section__title">{{ title }}</h1>

            <div class="section__meta">
                {% if author.avatar %}
                    <div class="section__meta-image"><img src="{{ author.avatar.abs_url }}" alt="author avater"></div>
                {% endif %}

                {% if author.description %}
                    <div class="section__meta-description">{{ author.description }}</div>
                {% endif %}
            </div>

            <div class="section__article-loop">
                {% for post in posts %}
                    <article class="article article--{{ post.type }} {{ post.class}}" id="post-{{ post.id }}">
                        <h2 class="article__title">
                            <a href="{{ post.link }}">{{ post.post_title }}</a>
                        </h2>
                        <span class="article__date">{{ post.date }}</span>
                    </article>
                {% endfor %}
            </div>

            {% include 'templates/pagination.twig' %}

        {% else %}
            <p>{{__('Sorry Nothing to Display ','gesso') }}</p>
        {% endif %}

    </section>
    <!-- END: template provided by views/author.twig  -->
{% endblock %}
